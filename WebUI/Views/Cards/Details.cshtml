@model WebUI.Data.Entities.DiagnosticCard

@{
    ViewData["Title"] = "Детали";
}

<h2>Диагностическая карта</h2>

@{ await Html.RenderPartialAsync("_DeleteOrDetails", Model);} 

<div>
    <a asp-action="Index" class="btn btn-default">Назад к списку</a>
    @if (Model.IsRegistered)
    {
        <a asp-action="docx" asp-route-id="@Model.Id" class="action-btn btn btn-primary">Сформировать бланк</a>
    }
    else
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="action-btn btn btn-primary">Изменить</a>
    }
</div>
