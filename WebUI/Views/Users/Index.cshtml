@model IEnumerable<WebUI.Data.Entities.User>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
@using (Html.BeginForm())
{
    <div class="form-inline">
        <select asp-items="ViewBag.UserStatusEnum" class="form-control" name="filter"></select>
        <input type="submit" value="Filter" class="btn btn-default" />
    </div>
}
<table class="table">
    <thead>
        <tr>
            <th>
                Status
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            string trStatus = "";
            string textStatus = "";
            if (item.IsRemoved)
            {
                trStatus = "danger";
                textStatus = "Deleted";
            }
            else
            {
                if (item.IsApproved == null)
                {
                    trStatus = "info";
                    textStatus = "Waiting for activation";
                }
                else
                {
                    if (item.IsApproved == true)
                    {
                        trStatus = "success";
                        textStatus = "Active";
                    }
                    else
                    {
                        trStatus = "warning";
                        textStatus = "Rejected";
                    }
                }
            }
            <tr class="@trStatus">
                <td>
                    <button class="btn-strong btn btn-@trStatus">@textStatus</button>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td style="text-align:center;">
                    @if (item.EmailConfirmed)
                    {
                    <text>
                    <button class="btn-strong-small btn btn-success">Verified</button>
                    </text>
                    }
                    else
                    {

                    <text>
                    <button class="btn-strong-small btn btn-warning">Unverified</button>
                    </text>
                    }
                </td>
                <td>
                    <div class="form-inline">
                        @switch (trStatus)
                        {
                            case "danger": // deleted user
                                <a asp-action="Restore" asp-route-id="@item.Id" class="action-btn btn btn-info">Restore</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn btn-info">Details</a>
                                break;
                            case "success":// accepted user
                                <a asp-action="Edit" asp-route-id="@item.Id" class="action-btn btn btn-primary">Edit</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn btn-danger">Delete</a>
                                break;
                            case "info":// waiting user
                                <a asp-action="Accept" asp-route-id="@item.Id" class="action-btn btn btn-success">Accept</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn btn-info">Details</a>
                                <a asp-action="Reject" asp-route-id="@item.Id" class="action-btn btn btn-warning">Reject</a>
                                break;
                            case "warning":// rejected user
                                <a asp-action="Accept" asp-route-id="@item.Id" class="action-btn btn btn-success">Accept</a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="action-btn btn btn-info">Details</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="action-btn btn btn-danger">Delete</a>
                                break;
                        }
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    .btn-strong {
        border-radius: 0 !important;
        width: 200px;
    }

    .btn-strong-small {
        border-radius: 0 !important;
        width: auto;
    }

    .action-btn {
        margin-bottom: 5px;
    }
</style>
